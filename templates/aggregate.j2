{% extends "base.j2" %}
{% block content %}

<div class="row">
    <div class="col">
        <h3>研究機関別件数</h3>
        <div class="alert alert-info">分科：{{ bunka }} </div>
        <hr>
    </div>
</div>
<div class="row">
    <div class="col">
        <form method="GET" action="pivot">
            <button type="submit" class="btn btn-default">検索</button>
            <input type="hidden" name="bunka" value="{{ bunka }}">
            <table class="table table-striped table-hover table-sm">
                <tr>
                    <th>順位</th>
                    <th>件数</th>
                    <th>研究機関名</th>
                </tr>
                {% for row in df.itertuples() %}
                <tr>
                    <th style="text-align: right">{{ row.ranking }}</th>
                    <td style="text-align: right">{{ row.total }}</td>
                    <td>
                        <div class="form-group form-check">
                            <label class="form-check-label" for="{{ row.Index }}">
                                <input type="checkbox" name="institution" class="form-check-input" id="{{ row.Index }}"
                                    value="{{ row.institution_name }}">{{ row.institution_name }}
                            </label>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </table>
        </form>
    </div>
    <div class="col">

    </div>
</div>
{% endblock %}